 simple but effective\nsolution.\n","versions":[{"version":"v1","created":"Tue, 18 Jan 2022 15:03:33 GMT"},{"version":"v2","created":"Wed, 6 Apr 2022 14:28:34 GMT"}],"update_date":"2022-04-07"}
