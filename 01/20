 and Denis Serre.\n","versions":[{"version":"v1","created":"Wed, 19 Jan 2022 18:09:34 GMT"},{"version":"v2","created":"Fri, 4 Feb 2022 11:58:27 GMT"},{"version":"v3","created":"Fri, 17 Jun 2022 14:16:22 GMT"}],"update_date":"2022-07-20"}
