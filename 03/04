uted triangular-lattice\nspin liquids.\n","versions":[{"version":"v1","created":"Fri, 4 Mar 2022 09:14:53 GMT"},{"version":"v2","created":"Fri, 1 Apr 2022 13:08:37 GMT"}],"update_date":"2022-06-09"}
