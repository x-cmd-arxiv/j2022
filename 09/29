 mass accretion.\n","versions":[{"version":"v1","created":"Wed, 28 Sep 2022 18:00:04 GMT"},{"version":"v2","created":"Wed, 16 Nov 2022 12:32:34 GMT"}],"update_date":"2022-12-07"}
