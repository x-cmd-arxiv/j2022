PW estimator.\n","versions":[{"version":"v1","created":"Thu, 15 Sep 2022 14:38:47 GMT"},{"version":"v2","created":"Mon, 19 Sep 2022 17:24:19 GMT"},{"version":"v3","created":"Thu, 3 Nov 2022 12:52:07 GMT"},{"version":"v4","created":"Wed, 4 Jan 2023 18:56:11 GMT"}],"update_date":"2023-01-05"}
