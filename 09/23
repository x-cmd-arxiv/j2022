ed quench parameter and\nvarying unstable particle mass and viceversa.\n","versions":[{"version":"v1","created":"Thu, 22 Sep 2022 19:52:55 GMT"},{"version":"v2","created":"Fri, 21 Apr 2023 11:34:45 GMT"}],"update_date":"2023-04-24"}
