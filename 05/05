 be released at https://github.com/MCG-NJU/BasicTAD.\n","versions":[{"version":"v1","created":"Thu, 5 May 2022 15:42:56 GMT"},{"version":"v2","created":"Wed, 9 Nov 2022 06:38:26 GMT"},{"version":"v3","created":"Mon, 10 Apr 2023 14:57:34 GMT"}],"update_date":"2023-04-12"}
