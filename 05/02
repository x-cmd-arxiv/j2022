o-polaritonic progression.\n","versions":[{"version":"v1","created":"Mon, 2 May 2022 14:46:10 GMT"},{"version":"v2","created":"Wed, 4 May 2022 08:27:36 GMT"},{"version":"v3","created":"Thu, 30 Jun 2022 10:16:14 GMT"}],"update_date":"2023-01-11"}
