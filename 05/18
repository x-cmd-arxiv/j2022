 neutron star configurations.\n","versions":[{"version":"v1","created":"Wed, 18 May 2022 14:24:29 GMT"},{"version":"v2","created":"Tue, 6 Sep 2022 08:59:42 GMT"},{"version":"v3","created":"Sun, 4 Dec 2022 15:31:46 GMT"}],"update_date":"2023-01-18"}
