s in\nnanophotonics.\n","versions":[{"version":"v1","created":"Sun, 29 May 2022 19:54:16 GMT"},{"version":"v2","created":"Thu, 2 Jun 2022 08:53:24 GMT"},{"version":"v3","created":"Sun, 4 Sep 2022 11:09:52 GMT"}],"update_date":"2022-09-07"}
