\nstrategies.\n","versions":[{"version":"v1","created":"Wed, 25 May 2022 02:56:24 GMT"},{"version":"v2","created":"Sun, 10 Jul 2022 21:18:03 GMT"},{"version":"v3","created":"Wed, 12 Oct 2022 01:30:34 GMT"},{"version":"v4","created":"Sun, 15 Jan 2023 13:04:02 GMT"}],"update_date":"2023-01-18"}
