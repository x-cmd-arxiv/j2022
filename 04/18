ank $3$ chirotope, aka\naffine oriented matroid.\n","versions":[{"version":"v1","created":"Sun, 17 Apr 2022 21:21:23 GMT"},{"version":"v10","created":"Mon, 22 May 2023 13:24:58 GMT"},{"version":"v2","created":"Sun, 26 Jun 2022 21:59:34 GMT"},{"version":"v3","created":"Wed, 20 Jul 2022 19:42:53 GMT"},{"version":"v4","created":"Wed, 24 Aug 2022 14:28:17 GMT"},{"version":"v5","created":"Wed, 28 Sep 2022 17:34:29 GMT"},{"version":"v6","created":"Mon, 28 Nov 2022 13:00:27 GMT"},{"version":"v7","created":"Mon, 26 Dec 2022 16:57:24 GMT"},{"version":"v8","created":"Mon, 6 Feb 2023 16:35:41 GMT"},{"version":"v9","created":"Thu, 30 Mar 2023 14:57:29 GMT"}],"update_date":"2023-05-23"}
