 pandemics.\n","versions":[{"version":"v1","created":"Wed, 2 Nov 2022 04:57:04 GMT"},{"version":"v2","created":"Thu, 12 Jan 2023 13:56:52 GMT"}],"update_date":"2023-01-13"}
